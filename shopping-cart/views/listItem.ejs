<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <header>
      <div class="container flex justify-between-flex align-center">
        <a href="/dashboard" class="logo">Shopping Cart</a>
        <nav>
          <ul class="flex align-center">
            <li><a href="/dashboard">Home</a></li>
            <li><a href="/logout">logout</a></li>
          </ul>
        </nav>
      </div>
    </header>
    <main>
      <section class="padding">
        <h2 class="secondary-heading text-center">Cart Items</h2>
        <div class="container grid grid-template-col-4 padding">
          <% data.forEach(element => { %>
          <article class="card">
            <h3 class="ternary-heading"><%= element.name %></h3>
            <p>qty:<%= element.quantity%></p>
            <p>&#8377;<%= element.price %></p>
            <div class="flex justify-between-flex align-center">
              <!-- <a href="/items/<%= element._id%>/remove" class="btn">Remove</a> -->
            </div>
          </article>
          <% }) %>
        </div>
      </section>
    </main>
  </body>
</html>